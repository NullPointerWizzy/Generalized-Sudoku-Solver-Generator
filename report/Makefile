MAIN_FILE = report
PDF_VIEWER = evince
LATEX_COMPILER = pdflatex
LATEX_FLAGS = -interaction=nonstopmode -halt-on-error

all: $(MAIN_FILE).pdf

$(MAIN_FILE).pdf: $(MAIN_FILE).tex
	$(LATEX_COMPILER) $(LATEX_FLAGS) $(MAIN_FILE).tex
	$(LATEX_COMPILER) $(LATEX_FLAGS) $(MAIN_FILE).tex

clean:
	rm -f *.aux *.log *.out *.pdf *.pdfsync *.toc

view: $(MAIN_FILE).pdf
	$(PDF_VIEWER) $(MAIN_FILE).pdf

help:
	@echo "Usage:"
	@echo " make [all]  Build the report"
	@echo " make clean  Remove all files generated by make"
	@echo " make help   Dislpay this help"

.PHONY: all clean view help